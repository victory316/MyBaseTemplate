<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybasetemplate">

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBaseTemplate">
        <activity android:name=".ui.motionlayout.MotionLayoutActivity"></activity>
        <activity android:name=".ui.weather.WeatherActivity" />
        <activity android:name=".ui.material.MaterialActivity" />
        <activity android:name=".ui.intro.IntroActivity" />
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>